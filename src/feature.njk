---
pagination:
    data: gallery
    size: 1
    alias: image
permalink: "/{{image.tag}}/{{ image.title | slug }}/" 
---

<!DOCTYPE html>
<html lang="en-US" dir="ltr">

<head>
    <link rel="stylesheet" href="https://use.typekit.net/euo1fyy.css">
    <link rel="manifest" href="/favicon_data/site.webmanifest">
    <link rel="stylesheet" href="../../css/global.css">
</head>

<body>
    <main id="main" class="main-container">
        <div class="featured-img">
            <div class="image-container">
                {% img
                src=image.src,
                alt=image.alt,
                className="showcase-img",
                sizes="(max-width: 480px) 80vw, (min-width: 640px) 800vw, (min-width: 1000px) 80vw, 80vw"
                %}
                <div class="image-description">
                    <h1 class="h2">{{ image.title }}</h1>
                </div>
                <div class="prev-next">
                    {% if pagination.href.previous %}
                    <a class="prev" href="{{ pagination.href.previous }}"><span class="lt">&lt;</span> Prev</a>
                    {% endif %}
                    {% if pagination.href.next %}
                    {% if not pagination.href.previous %}
                    <a class="next" style="margin-left: auto; margin-right: 0;" href="{{ pagination.href.next }}">Next
                        <span class="gt">&gt;</span></a>
                    {% else %}
                    <a class="next" href="{{ pagination.href.next }}">Next <span class="gt">&gt;</span></a>
                    {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </main>
</body>

</html>