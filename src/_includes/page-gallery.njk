<div class="gallery grid--auto">
    {% for image in gallery %}
        {%- if image.tag == slugPrefix %}
            <div class="photo-block">
                <a
                        href="/{{ slugPrefix }}/{{ image.title | slug }}"
                        aria-label="Gallery image {{ image.title }}"
                >
                    {% img
                        src=image.src,
                        alt=image.alt,
                        className="photo-block__img",
                        sizes="(max-width: 480px) 33.3vw, (min-width: 640px) 50vw, (min-width: 950px) 50vw, 33.3vw" %}
                </a>
                <div class="photo-block__info">
                    <p>{{ image.date }}</p>
                    <h2><a href="/{{ slugPrefix }}/{{ image.title | slug }}">{{ image.title }}</a></h2>
                </div>
            </div>
        {%- endif -%}
    {% endfor %}
</div>